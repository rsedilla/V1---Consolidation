# Security Configuration Updates for Laravel Application

# Add these to your .env file for better security:

# Session Security
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=true
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Password Reset Security
AUTH_PASSWORD_TIMEOUT=3600

# Database Connection Security
DB_CONNECTION=mysql
# Ensure your database user has minimal required permissions

# Application Security
APP_DEBUG=false
APP_ENV=production
LOG_LEVEL=warning

# Cache Security
CACHE_DRIVER=database
QUEUE_CONNECTION=database

# Rate Limiting
THROTTLE_REQUESTS=60
THROTTLE_DECAY_MINUTES=1

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Additional Security Measures
BCRYPT_ROUNDS=12
PREVENT_LAZY_LOADING=true